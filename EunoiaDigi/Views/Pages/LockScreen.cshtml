<body class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="brand-logo mb-3 text-center">
                                        <img class="logo-abbr dark-logo" width="200" src="~/Assets/images/logo-full.png" alt="">
                                        <img class="logo-abbr light-logo text-center m-auto" width="200" src="~/Assets/images/logo-full-light.png" alt="">
                                    </div>
                                    <h4 class="text-center mb-4">Account Locked</h4>
                                    <form action="@Url.Action("Login","Pages")">
                                        <div class="mb-3">
                                            <label><strong>Password</strong></label>
                                            <input type="password" class="form-control" value="Password">
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Unlock</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
    <!-- Common JS -->
    <script src="~/Assets/vendor/global/global.min.js"></script>
    <!-- Custom script -->
    <script src="~/Assets/vendor/dlabnav/dlabnav.min.js"></script>
